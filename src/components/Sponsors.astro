        image: "/sponsors/murillo.png",
        hoverColor: "orange",
    },
    {
        id: 10,
        name: "Sponsor de Apoyo 10",
        image: "/sponsors/tonylogo.png",
        hoverColor: "rose",
    },
    {
        id: 5,
        name: "Duqueso",
        image: "/sponsors/duqueso.png",
        hoverColor: "pink",
    },
    {
        id: 1,
        name: "La Serrana",
        image: "/sponsors/laserrana.png",
        hoverColor: "blue",
    },
    {
        id: 2,
        name: "Reves",
        image: "/sponsors/reves.png",
        hoverColor: "purple",
    },
    {
        id: 3,
        name: "K32",
        image: "/sponsors/k32.png",
        hoverColor: "green",
    },
    {
        id: 6,
        name: "Equilibrio",
        image: "/sponsors/equilibrio.png",
        hoverColor: "red",
    },
    {
        id: 7,
        name: "Alcaldía de Urrao",
        image: "/sponsors/alcaldia.png",
        hoverColor: "indigo",
    },
    {
