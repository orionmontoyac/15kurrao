        name: "Urrao paraiso vivo",
        image: "/sponsors/urraoparaisovivo.png",
        hoverColor: "teal",
    },
    {
        id: 9,
        name: "Paraiso Apicola",
        image: "/sponsors/apicola.jpeg",
        hoverColor: "amber",
    },
