---
interface Props {
    bgColor?: "primary" | "secondary";
    stat: string;
    title: string;
}

const { bgColor = "primary", stat, title } = Astro.props;
---

<div class={`bg-${bgColor} px-4 py-2 w-full shadow-lg text-center`}>
    <h3 class="text-5xl font-bold text-white mb-2">
        <span class="block">{stat}</span>
    </h3>
    <p class="text-white text-lg">{title}</p>
</div></div>