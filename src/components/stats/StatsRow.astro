---
import StatsCard from "@components/stats/StatsCard.astro";
---

<section class="bg-white w-screen">
  <div class="grid grid-cols-2 md:grid-cols-4 w-screen">
    <!-- Registered Runners -->
    <StatsCard bgColor="secondary" stat="1,200" title="Corredores Registrados" />

    <!-- Runners per Distance -->
    <div class="bg-primary px-4 py-2 w-full shadow-lg text-center">
      <h3 class="text-5xl font-bold text-white mb-2">
        <span class="block">10K: 800</span>
      </h3>
      <p class="text-white text-lg">Corredores por Distancia</p>
    </div>

    <!-- Average Finish Time -->
    <div class="bg-secondary px-4 py-2 w-full shadow-lg text-center">
      <h3 class="text-5xl font-bold text-white mb-2">1:15:30</h3>
      <p class="text-white text-lg">Tiempo Promedio de Finalización</p>
    </div>

    <!-- Countries Represented -->
    <div class="bg-primary px-4 py-2 w-full shadow-lg text-center">
      <h3 class="text-5xl font-bold text-white mb-2">12</h3>
      <p class="text-white text-lg">Países Representados</p>
    </div>
  </div>
</section>

<style>
  section {
    height: 20vh; /* 20% of the screen height */
  }
</style>
